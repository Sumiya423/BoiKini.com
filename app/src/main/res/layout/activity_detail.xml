<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_back"
    android:padding="18dp"
    tools:context="com.example.android.logindemo.activity.DetailsActivity"
    tools:showIn="@layout/activity_detail">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:backgroundTint="@color/light_blue"
        app:cardCornerRadius="3dp"
        app:cardElevation="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="30dp">

                <ImageView
                    android:id="@+id/teacherDetailImageView"
                    android:layout_width="150dp"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_action_account_circle_40" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:fontFamily="@font/chelsea_market"
                        android:text="Book Name"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#0f0f0f"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/priceDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="Price"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#0f0f0f" />

                    <TextView
                        android:id="@+id/dateDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="Date"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#0f0f0f" />

                    <TextView
                        android:id="@+id/contactDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="CONTACT DETAIL"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#0f0f0f" />

                    <TextView
                        android:id="@+id/descriptionDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minLines="4"
                        android:padding="5dp"
                        android:text="Book Description Here........."
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#0f0f0f" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:includeFontPadding="false"
                            android:text="Contact To Buy"
                            android:textColor="@color/blue"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                        <ImageView
                            android:id="@+id/whatsAppImageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.163"
                            app:srcCompat="@drawable/whatsapp" />

                        <ImageView
                            android:id="@+id/callImageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:tint="@color/blue2"
                            android:src="@drawable/ic_phone_call"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.163" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>
